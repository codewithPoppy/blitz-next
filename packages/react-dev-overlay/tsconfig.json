{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "es3",
    "lib": ["dom"],
    "downlevelIteration": true,
    "preserveWatchOutput": true,
    "outDir": "lib",
    "jsx": "react",
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
